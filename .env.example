# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Sepolia Testnet RPC Endpoint
# Get from: https://www.alchemy.com or https://infura.io
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key-here

# Ethereum Mainnet RPC Endpoint (for production)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key-here

# Private Key (without 0x prefix)
# SECURITY: Never commit this file with real keys!
PRIVATE_KEY=your-private-key-here

# Deployer Address (optional - auto-derived from private key)
DEPLOYER_ADDRESS=

# =============================================================================
# VERIFICATION CONFIGURATION
# =============================================================================

# Etherscan API Key
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your-etherscan-api-key-here

# =============================================================================
# GAS AND PERFORMANCE MONITORING
# =============================================================================

# Enable gas reporting (true/false)
REPORT_GAS=false

# CoinMarketCap API Key (for USD gas prices)
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key-here

# Gas report output file (optional)
GAS_REPORT_FILE=gas-report.txt

# Enable contract size checking on compile
CONTRACT_SIZER=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Pauser Role Address (for emergency pause functionality)
PAUSER_ADDRESS=

# Guardian Address (for security monitoring)
GUARDIAN_ADDRESS=

# Multisig Wallet Address (for ownership transfer)
MULTISIG_ADDRESS=

# Timelock Duration (in seconds, e.g., 2 days = 172800)
TIMELOCK_DURATION=172800

# =============================================================================
# CONTRACT DEPLOYMENT
# =============================================================================

# Deployed Contract Address (populated after deployment)
CONTRACT_ADDRESS=

# Deployment Block Number
DEPLOYMENT_BLOCK=

# Deployment Transaction Hash
DEPLOYMENT_TX_HASH=

# =============================================================================
# CAMPAIGN CONFIGURATION (Testing)
# =============================================================================

# Default Campaign Settings
CAMPAIGN_TITLE=Sample Campaign
CAMPAIGN_DESCRIPTION=This is a test campaign for demonstration
CAMPAIGN_TARGET_AMOUNT=1000000000000000000
CAMPAIGN_DURATION=2592000

# Minimum/Maximum Campaign Limits
MIN_CAMPAIGN_AMOUNT=100000000000000000
MAX_CAMPAIGN_AMOUNT=10000000000000000000
MIN_CAMPAIGN_DURATION=86400
MAX_CAMPAIGN_DURATION=7776000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Network Fork (for mainnet forking)
FORK_ENABLED=false
FORK_BLOCK_NUMBER=

# Test Accounts (for local testing)
TEST_ACCOUNT_1=
TEST_ACCOUNT_2=
TEST_ACCOUNT_3=

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# CI Environment Detection
CI=false

# Coverage Report Upload
CODECOV_TOKEN=your-codecov-token-here

# Deployment Environment (development/staging/production)
DEPLOYMENT_ENV=development

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================

# Monitoring Service API Key
MONITORING_API_KEY=

# Alert Webhook URL (for notifications)
ALERT_WEBHOOK_URL=

# Error Reporting (Sentry DSN)
SENTRY_DSN=

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Compiler Settings
SOLC_VERSION=0.8.24
OPTIMIZER_RUNS=200
VIA_IR=false

# Network Timeouts (milliseconds)
NETWORK_TIMEOUT=60000

# Rate Limiting
MAX_REQUESTS_PER_SECOND=10

# Debug Mode
DEBUG=false
VERBOSE=false
