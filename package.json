{
  "name": "crowdfund-platform",
  "version": "1.0.0",
  "description": "Blockchain-based crowdfunding platform built with Hardhat",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "node": "npx hardhat node",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "verify": "npx hardhat run scripts/verify.js",
    "verify:sepolia": "npx hardhat run scripts/verify.js --network sepolia",
    "interact": "npx hardhat run scripts/interact.js",
    "interact:sepolia": "npx hardhat run scripts/interact.js --network sepolia",
    "simulate": "npx hardhat run scripts/simulate.js",
    "simulate:sepolia": "npx hardhat run scripts/simulate.js --network sepolia",
    "coverage": "npx hardhat coverage",
    "clean": "npx hardhat clean",
    "size-contracts": "npx hardhat size-contracts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js": "eslint --ext .js,.ts .",
    "lint:js:fix": "eslint --ext .js,.ts . --fix",
    "lint:check": "prettier --check 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "lint:fix": "prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "lint:all": "npm run lint:sol && npm run lint:js && npm run lint:check",
    "format": "npm run lint:fix && npm run lint:sol:fix",
    "security:check": "node scripts/security-check.js",
    "security:audit": "npm audit --audit-level=moderate",
    "gas:benchmark": "npx hardhat run scripts/gas-benchmark.js",
    "gas:report": "REPORT_GAS=true npm test",
    "prepare": "npx husky install",
    "precommit": "npm run lint:all && npm test",
    "prepush": "npm run coverage && npm run security:check"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "blockchain",
    "hardhat",
    "crowdfunding",
    "smart-contracts",
    "web3",
    "defi"
  ],
  "author": "Crowdfund Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "hardhat": "^2.22.0",
    "husky": "^9.1.6",
    "solhint": "^5.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "ethers": "^6.13.0",
    "dotenv": "^16.4.0"
  }
}
